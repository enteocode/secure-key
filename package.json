{
    "name": "@enteocode/secure-key",
    "version": "1.0.0",
    "description": "A memory-hardened key container built with Rust & WASM for tamper-resistant crypto in Node.js",
    "module": "dist/index.mjs",
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "author": {
        "name": "Ádám Székely",
        "url": "https://www.linkedin.com/in/enteocode/"
    },
    "license": "MIT",
    "scripts": {
        "build": "rollup -c --environment NODE_ENV:production",
        "build:wasm": "./make.sh",
        "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings 0",
        "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "prepare": "husky",
        "release": "standard-version"
    },
    "keywords": [
        "memory security",
        "secure key storage",
        "crypto",
        "cryptography",
        "hmac",
        "node",
        "wasm",
        "webassembly",
        "zeroize",
        "typescript",
        "tamper detection",
        "xor masking",
        "secret management",
        "secure memory",
        "secure buffer",
        "in-memory encryption",
        "key protection"
    ],
    "engines": {
        "node": ">=20"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.27.0",
        "@rollup/plugin-eslint": "^9.0.5",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.2",
        "@rollup/plugin-url": "^8.0.2",
        "@rollup/wasm-node": "^4.41.1",
        "@swc-node/register": "^1.10.10",
        "@swc/core": "^1.11.29",
        "@swc/jest": "^0.2.38",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.17.30",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.0.0",
        "prettier": "^3.5.3",
        "rollup": "^4.41.1",
        "rollup-plugin-delete": "^3.0.1",
        "standard-version": "^9.5.0",
        "ts-jest": "^29.3.4",
        "tslib": "^2.8.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1"
    },
    "overrides": {
        "@rollup/plugin-eslint": {
            "eslint": "^9"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/enteocode/secure-key.git"
    },
    "bugs": {
        "url": "https://github.com/enteocode/secure-key/issues"
    },
    "files": [
        "dist",
        "LICENSE"
    ]
}
